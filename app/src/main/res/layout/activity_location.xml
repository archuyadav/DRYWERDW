<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/pickup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#7588F6"
            android:paddingStart="15dp"
            android:paddingLeft="15dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/btnnext"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="247dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/ic_arrow_forward_black_24dp"
        android:onClick="notes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drop" />

    <EditText
        android:id="@+id/pickup"
        android:layout_width="302dp"
        android:layout_height="57dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/edit_outline1"
        android:gravity="center|left"
        android:hint="PickUp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#253CBC"
        android:textColorHint="#7F8083"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />

    <EditText
        android:id="@+id/drop"
        android:layout_width="302dp"
        android:layout_height="57dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/edit_outline1"
        android:gravity="center|left"
        android:hint="Drop"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="#253CBC"
        android:textColorHint="#7F8083"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickup" />

</androidx.constraintlayout.widget.ConstraintLayout>